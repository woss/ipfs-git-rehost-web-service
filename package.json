{
  "name": "ipfs-rehost-web-service",
  "license": "GPL-3.0",
  "version": "0.1.0",
  "description": "Web service for re-hosting the git repositories using the IPFS.",
  "scripts": {
    "build": "rimraf dist && webpack  --config webpack.config.prod.js",
    "build:tsc": "tsc -b .",
    "start": " docker-compose up -d mongodb && webpack --watch",
    "lint:prettier": "prettier --config .prettierrc --write .",
    "lint:eslint": "eslint --ext .js,.ts .",
    "lint:fix": "pnpm lint:prettier; pnpm lint:eslint",
    "codegen:build": "yarn codegen && tsc -b .",
    "codegen:watch": "yarn codegen --watch",
    "codegen": "graphql-codegen --config codegen.yml -r dotenv/config"
  },
  "dependencies": {
    "agenda": "^4.2.1",
    "axios": "^0.22.0",
    "chalk": "^4.1.2",
    "cross-fetch": "^3.1.4",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "ipfs-http-client": "^53.0.1",
    "mongodb": "^4.1.3",
    "ramda": "^0.27.1",
    "rimraf": "^3.0.2",
    "simple-git": "^2.46.0"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^3.1.0",
    "@graphql-codegen/cli": "^2.2.1",
    "@graphql-codegen/typescript": "^2.2.4",
    "@graphql-codegen/typescript-document-nodes": "^2.1.6",
    "@graphql-codegen/typescript-graphql-request": "^4.1.6",
    "@graphql-codegen/typescript-operations": "^2.1.8",
    "@graphql-codegen/typescript-resolvers": "^2.3.2",
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.0",
    "@types/ramda": "^0.27.45",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "concurrently": "^6.3.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "graphql": "^15.6.1",
    "graphql-request": "^3.6.0",
    "graphql-tag": "^2.12.5",
    "husky": "^7.0.2",
    "lint-staged": "^11.2.3",
    "nodemon-webpack-plugin": "^4.5.2",
    "prettier": "^2.4.1",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3",
    "webpack": "^5.58.2",
    "webpack-cli": "^4.9.0",
    "webpack-node-externals": "^3.0.0"
  },
  "lint-staged": {
    "**/*": "prettier --config .prettierrc --write --ignore-unknown"
  }
}
