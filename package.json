{
  "name": "ipfs-rehost-web-service",
  "license": "GPL-3.0",
  "version": "0.1.0",
  "description": "Web service for re-hosting the git repositories using the IPFS.",
  "scripts": {
    "build": "rimraf dist && webpack",
    "build:tsc": "tsc -b .",
    "start": " docker-compose up -d mongodb && concurrently \"pnpm start:server\" \"pnpm start:worker\" --kill-others",
    "start:worker": "nodemon -w ./src src/worker.ts",
    "start:server": "nodemon -w ./src src/server.ts",
    "lint:prettier": "prettier --config .prettierrc --write .",
    "lint:eslint": "eslint --ext .js,.ts .",
    "lint:fix": "pnpm lint:prettier; pnpm lint:eslint"
  },
  "dependencies": {
    "agenda": "^4.2.1",
    "axios": "^0.22.0",
    "chalk": "^4.1.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "ipfs-http-client": "^53.0.1",
    "mongodb": "^4.1.3",
    "ramda": "^0.27.1",
    "rimraf": "^3.0.2",
    "simple-git": "^2.46.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.17.13",
    "@types/node": "^16.10.2",
    "@types/ramda": "^0.27.45",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "concurrently": "^6.3.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "nodemon": "^1.19.1",
    "prettier": "^2.4.1",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3",
    "webpack": "^5.58.2",
    "webpack-cli": "^4.9.0",
    "webpack-node-externals": "^3.0.0"
  },
  "lint-staged": {
    "**/*": "prettier --config .prettierrc --write --ignore-unknown"
  }
}